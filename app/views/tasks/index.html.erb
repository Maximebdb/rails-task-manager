<h1>Tasks#index</h1>
<% @tasks.each do |task| %>
  <p><%= task.id %> - <%= task.title %> <%= link_to 'show', "/tasks/#{task.id}" %> <%= link_to 'edit', edit_task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>

<%= link_to "add a new task", "/tasks/new" %>
